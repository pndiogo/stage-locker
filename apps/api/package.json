{
  "name": "@stage-locker/api",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "description": "Stage Locker API",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pndiogo/stage-locker-api.git"
  },
  "exports": {
    "./routes": "./src/routes/index.ts",
    "./schema": "./src/db/schema/index.ts"
  },
  "scripts": {
    "dev": "pnpm run --parallel /^dev:/",
    "dev:ts": "tsx watch src/index.ts",
    "dev:studio": "drizzle-kit studio",
    "build": "tsc && tsc-alias",
    "start": "node ./dist/src/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "vitest",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.1",
    "@hono/zod-openapi": "^0.19.6",
    "@libsql/client": "^0.15.6",
    "@scalar/hono-api-reference": "^0.8.10",
    "@stage-locker/eslint-config": "workspace:^",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.5.0",
    "dotenv-expand": "^12.0.2",
    "drizzle-orm": "^0.43.1",
    "drizzle-zod": "^0.7.1",
    "hono": "^4.7.10",
    "hono-pino": "^0.8.0",
    "mailersend": "^2.5.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "stoker": "^1.4.2",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.13.1",
    "@types/node": "^22.15.18",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.27.0",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-format": "^1.0.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  }
}
